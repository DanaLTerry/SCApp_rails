<div class="logo_home">
		<%= image_tag('SCHeader.svg', alt:'Synaptic Communities Logo', class: 'logo_home') %> 
		</div>  

	<div class="container">
		
		
			<div class= "hometext">

            <div class="container-fluid">
   <div class="row">
      <div class="col-xs-12">
         <div class="col-xs-2">
            <%= link_to root_path do %>
            <i class="fa fa-angle-left icon-back color-black" aria-hidden="true"></i>
            <%end%>
         </div>
      </div>
   </div>
</div>
<div class="">
   <div class="">
      <%= nested_form_for(@profile) do |f| %>
      <% if @profile.errors.any? %>
      <div id="error_explanation">
         <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
         <ul>
            <% @profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
         </ul>
      </div>
      <% end %>
      <div class="form-group">
         <label >First and Last Name</label>
         <%= f.text_field :name, placeholder: "First and Last Name", value:"#{current_user.first_name.capitalize} #{current_user.last_name.capitalize}", class:"form-control profile name" %>
      </div>
      <div class="form-group">
         <label>Current Year in School</label>
         <%= f.text_field :year, placeholder: "Current Year in School"%>
      </div>
      <div class="form-group">
         <label>Level of Education (pre-med, post-med, etc.)</label>
         <%= f.text_field :education, placeholder: "Level of Education"%>
      </div>
      <div class="form-group">
         <label>Street Address</label>
         <%= f.text_field :address, placeholder: "address"%>
      </div>
      <div class="form-group">
         <label>City</label>
         <%= f.text_field :city, placeholder: "city"%>
      </div>
      <div class="form-group">
         <label>State | Province</label>
         <%= f.select :state, {}, {}, {class:"form-control bfh-states profile name" , "data-country" => "profile_country" }%>
      </div>
      <div class="form-group">
         <label>Zip/Postal Code</label>
         <%= f.text_field :code, placeholder: "postal code"%>
      </div>
      <div class="white-space space-small"></div>
         <label>Country</label>
         <%= f.select :country, {}, {}, {class:"form-control bfh-countries profile name", "data-country" => "United States", "data-name" => "country" }%>
      </div>
      <div class="form-group">
         <label>Email</label>
         <%= f.text_field :email, placeholder: "Email", value:"#{current_user.email}"%>
      </div>
      <div class="form-group">
         <label>Confirm Email</label>
         <%= f.text_field :email, placeholder: "Confirm Email", value:"#{current_user.email}"%>
      </div>
      <div class="form-group">
         <label>Phone Number</label>
         <%= f.text_field :phone_number, placeholder: "phone number", value:"#{current_user.phone_number}"%>
      </div>
      <div class="form-group">
            <label>Spanish Language Level</label>
            <%= skill_form.select :level, options_for_select([["Beginner", :Beginner],["Intermediate", :Intermediate],["Advanced", :Advanced], ["Fluent", :Fluent]]),{},{class:"form-control profile name"} %>
         </div>
         <div class="form-group">
            <label>Gender</label>
            <%= gender_form.select :gender, options_for_select([["female","female"],["male", "male"]]),{},{class:"form-control profile blue"} %>
         </div>
         <div class="form-group">
         <label>Birth Date</label>
         <%= f.text_field :date, placeholder: "birth date", value:"#{current_user.date}"%>
      </div>
      <div class="form-group">
         <label>Passport Number</label>
         <%= f.text_field :passport_number, placeholder: "passport number", value:"#{current_user.passport_number}"%>
      </div>
      <div class="white-space space-small"></div>
         <label>Passport Issueing Country</label>
         <%= f.select :country, {}, {}, {class:"form-control bfh-countries profile name", "data-country" => "United States", "data-name" => "country" }%>
      </div>
      <div class="from-group">
         <%= f.label :passport, "My passport is valid for at least 6 months AFTER departure date or I will have a new passport before departure:" %><br>
         <%= f.collection_check_boxes :yes, {}, {class:"checkbox-inline"} %>
      </div>
      <div class="form-group">
         <label>Two Emergency Contacts</label>
         <%= f.text_field :name, placeholder: "two emergency contacts"%>
      </div>
      <div class="form-group">
         <label>Special Dietary Need(vegetarian, etc.)</label>
         <%= f.text_field :name, placeholder: "two emergency contacts"%>
      </div>
      <div class="form-group">
         <label>For emergency and planning purposes, please list any significant medical history, medications you are taking, or known allergies</label>
         <%= f.text_field :diet, placeholder: "dietary needs"%>
      </div>

